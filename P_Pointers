#include <stdio.h>

int main() {
  int num = 10;
  int *ptr;

  ptr = &num;

  printf("The value of num is %d\n", num);
  printf("The memory address of num is %p\n", &num);
  printf("The value of ptr is %p\n", ptr);
  printf("The value that ptr is pointing to is %d\n", *ptr);

  return 0;
}
